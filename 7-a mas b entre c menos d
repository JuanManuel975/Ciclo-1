/* Ejercicio 4: Escribe la siguiente expresión como expresión en C++: a + (b/(c-d))) */

#include <iostream>
using namespace std;

int main()
{

    float numeroa, numerob, numeroc, numerod,expresionfinal = 0;
    cout << "\nIngrese su valor A : "; cin >> numeroa;
    cout << "\nIngrese su valor B : "; cin >> numerob;
    cout << "\nIngrese su valor C : "; cin >> numeroc;
    cout << "\nIngrese su valor D : "; cin >> numerod;

    expresionfinal = numeroa+(numerob /(numeroc - numerod));

    cout << "\nEl resultado sera: " << expresionfinal;


    return 0;
}
