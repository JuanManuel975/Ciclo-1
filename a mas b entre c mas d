/* Ejercicio 2: Escribe la siguiente expresión como expresión en C++: (a+b)/(c+d) */

#include <iostream>
using namespace std;

int main()
{
    float numeroa, numerob, numeroc, numerod,expresion;

    cout << "\nIngrese su valor A: "; cin >> numeroa;
    cout << "\nIngrese su valor B: "; cin >> numerob;
    cout << "\nIngrese su valor C: "; cin >> numeroc;
    cout << "\nIngrese su valor D: "; cin >> numerod;

    expresion = (numeroa + numerob) / (numeroc + numerod);

    cout << "\nLa respuesta de la expresion es: "<< expresion;

    return 0;
}
